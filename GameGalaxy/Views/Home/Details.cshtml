<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" class="img-fluid" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p><strong>Developer:</strong> @Model.Developer</p>
            <p><strong>Publisher:</strong> @Model.Publisher</p>
            <p><strong>Genre:</strong> @Model.Genre.Name</p>
            <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
            <p><strong>Rating:</strong> @Model.Rating</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Platforms:</strong></p>
            <div>
                @foreach (var gamePlatform in Model.GamePlatforms)
                {
                    <button class="btn btn-outline-primary platform-button me-2" data-price="@gamePlatform.Price" title="@gamePlatform.Platform.Name">
                        @{
                            switch (gamePlatform.Platform.Name.ToLower())
                            {
                                case "microsoft windows":
                                    <i class="bi bi-microsoft"></i>
                                    ;
                                    break;
                                case "playstation 5":
                                    <i class="bi bi-playstation"></i>
                                    ;
                                    break;
                                case "xbox series x|s":
                                    <i class="bi bi-xbox"></i>
                                    ;
                                    break;
                                case "nintendo-switch":
                                    <i class="bi bi-nintendo-switch"></i>
                                    ;
                                    break;
                            }
                        }
                    </button>
                }
            </div>
            <p><strong>Price:</strong> <span id="price">@Model.GamePlatforms.FirstOrDefault()?.Price.ToString("C")</span></p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.platform-button').forEach(function (button) {
            button.addEventListener('click', function (event) {
                event.preventDefault();
                var price = this.getAttribute('data-price');
                document.getElementById('price').textContent = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(price);
            });
        });
    </script>
}