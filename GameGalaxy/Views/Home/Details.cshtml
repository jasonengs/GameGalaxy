@model GameGalaxy.Models.Game

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/@Model.Image" class="img-fluid" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p><strong>Developer:</strong> @Model.Developer</p>
            <p><strong>Publisher:</strong> @Model.Publisher</p>
            <p><strong>Genre:</strong> @Model.Genre.Name</p>
            <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
            <p><strong>Rating:</strong> @Model.Rating</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p>
                <strong>Platforms:</strong>
                @foreach (var platform in Model.GamePlatforms.Select(gp => gp.Platform))
                {
                    @if (platform.Name == "Microsoft Windows")
                    {
                        <i class="bi bi-microsoft" title="Microsoft Windows"></i>
                    }
                    @if (platform.Name == "Playstation 5")
                    {
                        <i class="bi bi-playstation" title="Playstation 5"></i>
                    }
                    @if (platform.Name == "Xbox Series X|S")
                    {
                        <i class="bi bi-xbox" title="Xbox Series X|S"></i>
                    }
                    @if (platform.Name == "Nintendo Switch")
                    {
                        <i class="bi bi-nintendo-switch" title="Nintendo Switch"></i>
                    }
                }
            </p>
        </div>
    </div>
</div>
